<div class="header">All Links</div>

<table border="1">
  <tr>
    <th>Short Path</th>
    <th>Full URL</th>
    <th>Requests</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link_to link.short, "http://thom.is/#{link.short}" %></td>
    <td><%= link_to link.long, "http://thom.is/#{link.short}" %></td>
    <td><%= link.requests %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path %>
